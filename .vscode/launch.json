{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "cwd": "${workspaceFolder}",
      "program": "${file}",
      "outFiles": [
        "${workspaceFolder}/build/**/*.js",
        "!**/node_modules/**"
      ],
      "preLaunchTask": "Compile TypeScript",
      "console": "integratedTerminal"
    }
  ]
}
